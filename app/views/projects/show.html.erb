<div class="page-header">
    <div class="row" >
        <div class="span8">
            <h1> <%= @project.name %></h1>
        </div>
        <div class="span4">
            <div class="pull-right">
                <h2><%= @project.client.name %></h2>
            </div>
        </div>
    </div>
</div>

<div class="row" >
    <div class="span12">
        <div class="row">
            <div class="span4">
                <div class="well">

                    <div class="project">
                        
                        <p class="lead"><%= @project.description %></p>
                        <p><strong>Start:</strong>  <%= @project.start.strftime("%e-%B-%Y") %> </p>
                        <p><strong>End:</strong> <%= @project.end.strftime("%e-%B-%Y") %></p>
                        <p>$<%= number_with_precision(@project.value, precision: 0, separator: '.', delimiter: ',' ) %></p>
                        <div class="meta">
                            <%= link_to time_ago_in_words(@project.created_at) +" ago", @project %>
                            <span class="admin">
                                | <%= link_to 'Edit', edit_project_path(@project) %> | 
                                <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="span6">
                <legend>Project Roles</legend>
            </div>
            <div class="span2">
                <%= link_to 'Add Role', new_client_path, class:"btn btn-success pull-right" %>
            </div>
            <div class="span8">
                <%= render @project.roles %>
            </div>
         </div>
        <div class="row">
            <div class="span12">
                <h3>Milestones</h3>
            </div>
        </div>
    </div>
</div>

<%= link_to 'Back', projects_path %>
