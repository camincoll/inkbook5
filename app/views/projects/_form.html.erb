<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :client_id, collection: Client.all, label_method: :name %>
    <%= f.input :name, :autofocus => true %>
    <%= f.input :description, input_html: { class: "span6" } %>
    <%= f.input :start, input_html: { class: "span2" } %>
    <%= f.input :end, input_html: { class: "span2" } %>
    <%= f.input :value, input_html: { class: "span2" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-success" %>
  </div>
<% end %>
