<div class="page-header">
	<div class="row" >
        <div class="span8">
			<h1>All Statuses </h1>
		</div>
		<div class="span4">
			<%= link_to 'Update Status', new_status_path, class:"btn btn-success pull-right" %>
		</div>
	</div>
</div>

<% @statuses.each do |status| %>
	<div class="status">
		<div class="row">
			<div class="span1">
				<%= image_tag status.user.gravatar_url %>
			</div>
			<div class="span7"
				<strong> <%= status.user.full_name %> </strong>(<%= status.user.profile_name %>)<br />
				<%= status.content %>
				<div class="meta">
			    	<%= link_to time_ago_in_words(status.created_at) +" ago", status %>
					<span class="admin">
			    		| <%= link_to 'Edit', edit_status_path(status) %> | 
			    		<%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
					</span>
				</div>
			</div>
		</div>
	</div>
<% end %>