<div class="page-header">
	<h1>All Statuses <%= link_to 'Post Status', new_status_path, class:"btn btn-success" %></h1>
</div>

<% @statuses.each do |status| %>
	<div class="status">
		<strong> <%= status.user.full_name %> </strong>(<%= status.user.profile_name %>)<br />
		<%= status.content %>
		<div class="meta">
	    	<%= link_to time_ago_in_words(status.created_at) +" ago", status %>
			<span class="admin">
	    		| <%= link_to 'Edit', edit_status_path(status) %> | 
	    		<%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
			</span>
		</div>
	</div>
<% end %>