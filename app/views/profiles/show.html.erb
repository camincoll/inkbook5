<div class="page-header">
    <div class="row" >
        <div class="span8">
            <h1><%= @user.full_name %> </h1>
            <%= link_to "Follow", new_following_path(follower_id: @user), class: "btn" %>
        </div>
    </div>
</div>

<% if @statuses %>
	<% @statuses.each do |status| %>
		<div class="status">
			<%= status.content %>
			<div class="meta">
		    	<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
			</div>
		</div>
	<% end %>
<% end %>